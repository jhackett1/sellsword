
<div class="container project">
<p class="page-intro">Project</p>
<h1 class="page-title"><%= @project.name %></h1>

<% if notice %>
    <p id="notice" class="alert"><%= notice %></p>
<% end %>

<details class="client-details">
    <summary class="client-details__summary">See client details</summary>

    <h5>Billing email</h5>
    <p><%= @project.email %></p>

    <h5>Other contact details</h5>
    <p><%= @project.address %></p>
    
    <%= link_to 'Edit', edit_project_path(@project) %>
    <%= link_to 'Destroy', @project, method: :delete, data: { confirm: 'Are you sure?' } %>
    
</details>

</div>